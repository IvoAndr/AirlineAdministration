<section id="viewMyFlights">
    <h3>Your Flights</h3>

    {{#each data}}
        <div class="flight-ticket">
            <div class="flight-left">
                <img src="{{img}}" alt="">
            </div>
            <div class="flight-right">
                <div>
                    <h3>{{destination}}</h3><span>{{departureDate}}</span>
                </div>
                <div>
                    from {{origin}} <span>{{departureTime}}</span>
                </div>
                <p>{{seats}} Seats ({{cost}}$ per seat) </p>
                <a href="#" class="remove" index="{{@index}}">REMOVE</a>
                <a href="#" class="details" index="{{@index}}">Details</a>
            </div>
        </div>
    {{/each}}
</section>